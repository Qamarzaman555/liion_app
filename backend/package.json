{
    "name": "liion-logging-backend",
    "version": "1.0.0",
    "description": "Backend service for Liion app logging",
    "main": "dist/server.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/server.js",
        "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
        "migration:generate": "typeorm-ts-node-commonjs migration:generate src/migrations/Migration -d src/config/data-source.ts",
        "migration:run": "typeorm-ts-node-commonjs migration:run -d src/config/data-source.ts",
        "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/config/data-source.ts",
        "schema:sync": "typeorm-ts-node-commonjs schema:sync -d src/config/data-source.ts",
        "db:up": "docker-compose up -d",
        "db:down": "docker-compose down",
        "db:reset": "docker-compose down -v && docker-compose up -d"
    },
    "keywords": [
        "logging",
        "api",
        "express",
        "typeorm"
    ],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "express": "^4.18.2",
        "typeorm": "^0.3.17",
        "pg": "^8.11.3",
        "reflect-metadata": "^0.1.13",
        "swagger-ui-express": "^5.0.0",
        "swagger-jsdoc": "^6.2.8",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "helmet": "^7.1.0",
        "express-rate-limit": "^7.1.5",
        "class-validator": "^0.14.0",
        "class-transformer": "^0.5.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.5",
        "@types/swagger-ui-express": "^4.1.6",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/cors": "^2.8.17",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3"
    }
}